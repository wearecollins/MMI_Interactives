    <!-- This will show the live camera -->
  </div>

  <!-- 
  As long as ids stay the same, it will play/switch automatically.
  -->
  <audio src="{{audio.front}}" id="camera_front"></audio>
  <audio src="{{audio.side}}" id="camera_side"></audio>
  <audio src="{{audio.sideShare}}" id="camera_side_share"></audio>
</div>
